{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "declarationDir": "./dist/types",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "outDir": "./dist",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
